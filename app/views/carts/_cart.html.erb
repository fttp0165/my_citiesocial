<%if current_cart.empty?%>
  <div class="buttons has-addons is-right">
    <%=link_to "繼續選購" ,cart_path,class:"button "%>
</div>
<%else%>
<table class=" table is-fullwidth">
      <thead>
        <tr>
          <th>品項</th>
          <th>單價</th>
          <th>數量</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <%current_cart.items.each do |item|%>
          <thead>
            <tr>
              <th>
                <%=item.product.name%>
              </th>
              <th>
                <%=item.product.sell_price%>
              </th>
              <th>
                <%=item.quantity%>
              </th>
              <th>
                <%=item.total_price%>
              </th>
            </tr>
          </thead>
          <%end%>
      </tbody>
      <tfoot>
        <tr>
          <td colspan=3>總價</td>
          <td>
            <%=current_cart.total_price%>
          </td>
        </tr>
      </tfoot>
      </table>
      <div class="buttons is-right">
        <%=link_to "繼續選購" ,cart_path,class:"button "%>
        <%=link_to " 結帳",checkout_cart_path,class:"button is-danger"%>
      </div>

      <%end%>